<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/inputHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="81dp"
        android:ems="10"
        android:hint="Enter Height"
        android:inputType="number|numberDecimal" />

    <Spinner
        android:id="@+id/spinnerHeight"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputWeight"
        android:layout_alignTop="@+id/inputHeight"
        android:layout_marginLeft="260dp"
        android:entries="@array/heights_arrays" />

    <EditText
        android:id="@+id/inputWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputHeight"
        android:layout_alignStart="@+id/inputHeight"
        android:layout_below="@+id/inputHeight"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Enter Weight"
        android:inputType="number|numberDecimal" />

    <Spinner
        android:id="@+id/spinnerWeight"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/inputWeight"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="8dp"
        android:entries="@array/weight_arrays" />+

    <Button
        android:id="@+id/buttonBMI"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputWeight"
        android:layout_alignStart="@+id/inputWeight"
        android:layout_below="@+id/inputWeight"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="55dp"
        android:background="#000000"
        android:onClick="onButtonClick"
        android:text="Calculate BMI"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/resultBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonBMI"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:textSize="30dp" />


</RelativeLayout>